<h1>DASHBOARD</h1>
<h3>Good To See You {{name}}</h3>
<p>Have A Look At Your Stories</p>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>title</th>
            <th>date</th>
            <th>status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}"></a>{{title}}</td>
            <td>{{createdAt}}</td>
            <td>{{status}}</td>
            <td></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>you have not written any stories yet</p>
{{/if}}
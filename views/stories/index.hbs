<h3>stories</h3>
<div class="row">
    {{#each stories}}
    <div class="col s14 m4">
        <div class="card">
            <div class="card-image">
                {{!-- editicon --}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 170)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}">
                    <a href="stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>no public stories</p>
    {{/each}}
</div>